pipeline {
    agent any
    tools {
        terraform 'terraform'
    }
    stages {
        stage('Git Checkout') {
            steps {
                git branch: [[name: '*/master']], url: 'https://github.com/subash211/subash.git'
            }
        }
        stage('Present Working Directory') {
            steps {
                sh 'pwd | ls -lrt'
            }
        }
        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('Terraform Apply') {
            steps {
                sh 'sudo terraform apply --auto-approve'
            }
        }
    }
}
